<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_bought_together_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.bought_together</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="5"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="nestbundle" string="Bought Together Settings"
                         data-key="bought_together">
                        <h2>Bought Together Config</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="shopify_app">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Shopify App</span>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="shopify_key" string="Shopify API Key"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="shopify_key"/>
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="shopify_secret" string="Shopify API Secret"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="shopify_secret"/>
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="shopify_api_version" string="Shopify API version"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="shopify_api_version"/>
                                        </div>
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="ngrok_address" string="Webhook Base URL"
                                                   class="col-lg-3 o_light_label"/>
                                            <field name="ngrok_address"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>